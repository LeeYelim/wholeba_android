<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="@drawable/set_my_list1"
    tools:context="com.banana.banana.setting.MyinfoActivity" >

    <ScrollView
        android:id="@+id/scrollWomanInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp" >

                <Button
                    android:id="@+id/btn_public_yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fffabc"
                    android:text="커플에게 공개" />

                <Button
                    android:id="@+id/btn_public_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fffabc"
                    android:text="커플에게 비공개" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/periodinput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/set_my_head_list" >

                <TextView
                    android:id="@+id/text_period_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="생리 주기 입력"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#6a3906"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:background="@drawable/set_my_head_list"
                    android:text="수정"
                    android:textSize="12sp"
                    android:textColor="#6a3906" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6a3906"
                   		android:textSize="13sp"
                        android:text="시작" />

                    <EditText
                        android:id="@+id/edit_startYear"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="#6a3906"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edit_startMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="#6a3906"
                   		android:textSize="13sp"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/edit_startDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" 
                        android:textColor="#6a3906"
                   		android:textSize="13sp"
                        android:inputType="number"
                        android:ems="10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6a3906"
                   		android:textSize="13sp"
                        android:text="종료" />

                    <EditText
                        android:id="@+id/edit_endYear"
                        android:layout_width="101dp"
                        android:gravity="center" 
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#6a3906"
                   		android:textSize="13sp"
                        android:ems="10" />

                    <EditText
                        android:id="@+id/edit_endMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:gravity="center" 
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textColor="#6a3906"
                   		android:textSize="13sp"
                        android:ems="10" />

                    <EditText
                        android:id="@+id/edit_endDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:gravity="center" 
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textColor="#6a3906"
                   		android:textSize="13sp"
                        android:ems="10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6a3906"
                   		android:textSize="13sp"
                        android:text="주기" />

                    <EditText
                        android:id="@+id/edit_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:textColor="#6a3906"
                        
                   		android:textSize="13sp"
                        android:inputType="number" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id = "@+id/editPeriodView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/set_my_head_list"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_latest_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:layout_weight="0.27"
                    android:text="최근 평균 주기"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#6a3906"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_update2"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="128dp" 
                    android:visibility="invisible"
                   	android:textSize="12sp"
                    android:background="@drawable/set_my_head_list"
                    android:text="수정"
                    android:textColor="#6a3906" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/list_latest_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical" >  
                
                    <com.banana.banana.setting.WomanLinearLayout
                        android:id="@+id/list_menses"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                    </com.banana.banana.setting.WomanLinearLayout>
                    
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/set_my_head_list" >

                <TextView
                    android:id="@+id/text_medicine"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:text="피임약 복용 여부"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#6a3906"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btn_alarm_yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fffabc"
                    android:text="YES" />

                <Button
                    android:id="@+id/btn_alarm_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fffabc"
                    android:text="NO" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarm_layout_one"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="13dp"
                android:background="#ffffff"
                android:visibility="visible"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_medicine_start"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#6a3906"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                   		android:textSize="13sp"
                    android:text="시작일"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
 
              <DatePicker
                  android:id="@+id/alarmDatePicker"
                  android:layout_width="match_parent"
                  android:layout_height="252dp"
                  android:calendarViewShown="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarm_layout_two"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="32dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="visible" >
			
      
                
			<TextView
                    android:id="@+id/text_medicine_time"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#6a3906"
                   	android:textSize="13sp"
                    android:text="복용 시간"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
			    <TimePicker 
			        android:id="@+id/alarmTimePicker"
			        android:layout_width="match_parent"
			        android:layout_height="252dp"/>
			    
			     <ToggleButton
                    android:id="@+id/toggle_onoff"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="#6a3906"
                    android:text="반복"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="right"
                    android:textColor="#ffffff"
                    android:layout_marginRight="13dp"
                    android:textOff="알람off"
                    android:textOn="알람on" />
			     
			     <Button
                android:id="@+id/btn_set_alarm"
                android:layout_width="256dp"
                android:layout_height="34dp"
                android:background="@drawable/set_q_bt_ok"
                android:text="시간설정"
                android:layout_gravity="center"
                android:textColor="#6a3906"
                android:textSize="13sp"
                 android:layout_marginBottom="15dp"
                android:visibility="visible" />
			     
      </LinearLayout>
     

        
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
