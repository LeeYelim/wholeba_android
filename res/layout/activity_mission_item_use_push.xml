<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/action_background"
    android:orientation="vertical"
    tools:context="com.banana.banana.MissionItemUsePushActivity" >

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_gravity="end"
        android:layout_marginRight="17dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/mission_cancle_button" />

    <FrameLayout
        android:layout_width="218dp"
        android:layout_height="240dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="44dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="142dp"
            android:layout_height="215dp"
            android:src="@drawable/mission_pass_banana_character" />

        <TextView
            android:id="@+id/text_item_name_2"
            android:layout_width="135dp"
            android:layout_height="123dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/mission_pass_banana_chip"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="20dp"
            android:paddingRight="25dp"
            android:text="TextView"
            android:textColor="#230101"
            android:textSize="16sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/text_item_usedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="33dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_theme_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="3dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="사용했습니다."
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_hint"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mission_pass_yellow_button"
        android:text="확인"
        android:textColor="#230101"
        android:textSize="12sp" />

</LinearLayout>
