<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutMissionList"
        android:layout_width="match_parent"
        android:layout_height="60dp" 
     >

        <ImageView
            android:id="@+id/img_mission1"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/text_missionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="81dp"
            android:layout_toRightOf="@+id/img_mission1"
            android:text="TextView"
            android:textColor="#434343"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/missionState"
            android:layout_width="64dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="26dp"
            android:background="@drawable/mission_contents_yellow_icon2"
            android:gravity="center"
            android:textColor="#230101"
            android:textSize="11sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detailView"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/mission_contents_bar2_selected_under"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="42dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="2015.04.24"
                android:textColor="#434343"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/mission_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#434343"
                android:text="#명동#뽀뽀#성공적"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
